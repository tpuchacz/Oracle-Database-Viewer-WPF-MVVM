<Application x:Class="MVVMToolkit.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:MVVMToolkit"
             xmlns:ViewModels="clr-namespace:MVVMToolkit.ViewModels"
             xmlns:Views="clr-namespace:MVVMToolkit.Views">
    <Application.Resources>
        <DataTemplate DataType="{x:Type ViewModels:LoginViewModel}">
            <Views:LoginView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type ViewModels:DatabaseViewModel}">
            <Views:DatabaseView/>
        </DataTemplate>
    </Application.Resources>
</Application>
